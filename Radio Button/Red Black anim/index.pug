    h4 Click on the radio buttons or labels
  each val in [{id: "Uno", name: "I like this work"}, {id: "Dos", name: "Share in social networks"}, {id: "Tres", name: "Follow the author"}]
    input(
    type="radio" 
    name="field"
    id= val.id
    )
    label(
    for= val.id
    )
      svg.check(
      viewbox="0 0 40 40"
      )
        defs
          linearGradient(
          id="gradient"
          x1="0"
          y1="0"
          x2="0"
          y2="100%"
          )
            stop(
            offset="0%"
            stop-color=colone
            )
            stop(
            offset="100%"
            stop-color=coltwo
            )
        circle(
        id="border"
        r= sizeM
        cx= sizeL
        cy= sizeL
        )
        circle(
        id="dot"
        r= sizeS
        cx= sizeL
        cy= sizeL
        )
      = val.name
      
